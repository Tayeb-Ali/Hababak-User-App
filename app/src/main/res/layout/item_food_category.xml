<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp8"
    android:layout_marginRight="@dimen/dp8"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_food_category_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:scaleType="centerCrop"
        android:src="@drawable/chef_logo" />

    <TextView
        android:id="@+id/item_food_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp16"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Fast food"
        android:textColor="@color/colorDarkText4" />

    <TextView
        android:id="@+id/item_food_category_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Fast food"
        android:textColor="@color/colorDarkText1"
        android:textSize="12sp" />

</LinearLayout>